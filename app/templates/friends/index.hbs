<h1>Friends Index</h1>

{{! The context here is the controller}}
<h2>Total Friends: {{model.length}}</h2>

{{link-to 'New Friend' 'friends.new'}}

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {{#each model as |friend|}}
      <tr>
        <td>
          {{link-to friend.fullName 'friends.show' friend}}
        </td>
        <td>
          {{friend.email}}
        </td>
        <td>
          <a href="#"{{action "delete" friend}}>Delete</a>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
